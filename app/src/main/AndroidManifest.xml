<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ch.dc.shipment_tracking_app">

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Shipmenttrackingapp">
        <activity
            android:name=".ClientTrackPackageInformationActivity"
            android:parentActivityName=".ClientTrackPackageActivity" />
        <activity
            android:name=".ClientTrackPackageActivity"
            android:parentActivityName=".ClientMainActivity" />
        <activity android:name=".ClientPackageSentActivity" />
        <activity
            android:name=".ClientPackageConfirmationActivity"
            android:parentActivityName=".ClientSendPackageActivity" />
        <activity
            android:name=".ClientSendPackageActivity"
            android:launchMode="singleTask"
            android:parentActivityName=".ClientMainActivity" />
        <activity
            android:name=".QuestionsAnswersActivity"
            android:theme="@style/Theme.Shipmenttrackingapp.NoActionBar" />
        <activity
            android:name=".AboutUsActivity"
            android:theme="@style/Theme.Shipmenttrackingapp.NoActionBar" />
        <activity
            android:name=".SettingsActivity"
            android:theme="@style/Theme.Shipmenttrackingapp.NoActionBar" />
        <activity
            android:name=".ClientMainActivity"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".PostEmployeeShippingNumberActivity"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".PostEmployeeMainActivity"
            android:parentActivityName=".PostEmployeeShippingNumberActivity" />
        <activity
            android:name=".PostEmployeeUpdateTrackingActivity"
            android:parentActivityName=".PostEmployeeMainActivity" />
        <activity
            android:name=".PostEmployeeManagePackageActivity"
            android:parentActivityName=".PostEmployeeMainActivity" />
        <activity
            android:name=".MainActivity"
            android:theme="@style/Theme.Shipmenttrackingapp.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>