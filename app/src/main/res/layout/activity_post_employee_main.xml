<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    android:id="@+id/post_employee_main_coordinatorLayout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".PostEmployeeMainActivity">

        <androidx.cardview.widget.CardView
            android:id="@+id/post_employee_main_tracking_update_card"
            android:layout_width="300dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            app:cardCornerRadius="4dp"
            app:cardBackgroundColor="#dbdbdb"
            android:layout_marginTop="100dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical" >

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:layout_marginTop="22dp"
                    android:src="@drawable/ic_tracking_update"
                    android:contentDescription="@string/post_employee_main_tracking_update_card_image_description" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/post_employee_main_tracking_update_card_title"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textAlignment="center"
                    android:layout_marginTop="15dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/post_employee_main_tracking_update_card_description"
                    android:textSize="13sp"
                    android:textColor="@color/black"
                    android:textAlignment="center"
                    android:layout_margin="10dp"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/post_employee_main_manage_packages_card"
            android:layout_width="300dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            app:cardCornerRadius="4dp"
            app:cardBackgroundColor="#dbdbdb"
            android:layout_marginTop="50dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical" >

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="65dp"
                    android:layout_marginTop="22dp"
                    android:src="@drawable/ic_manage_packages"
                    android:contentDescription="@string/post_employee_main_manage_packages_card_image_description" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/post_employee_main_manage_packages_card_title"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textAlignment="center"
                    android:layout_marginTop="14dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/post_employee_main_manage_packages_card_description"
                    android:textSize="13sp"
                    android:textColor="@color/black"
                    android:textAlignment="center"
                    android:layout_margin="10dp"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>